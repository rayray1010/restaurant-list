<div class="bg">
  <div class="row py-5 register">
    <div class="col-8 col-sm-7 col-md-6 col-lg-4 m-auto">
      <div class="card card-body">
        <h1 class="text-center my-3" style="letter-spacing:2px; font-weight:bold">Register</h1>
        {{> message}}
        <form action="/users/register" method="POST" class="needs-validation" novalidate>
          <div class="form-group">
            <label for="name">Name(建議填寫)</label>
            <input type="text" id="name" name="name" class="form-control" placeholder="Enter Name" value="{{name}}">
          </div>
          <div class="form-group">
            <label for="email">Email <sup class="text-danger">&#8727</sup></label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
              value="{{email}}" required>
            <div id="email" class="invalid-feedback">
              &#9888 email為必填
            </div>
          </div>
          <div class="form-group">
            <label for="password">Password <sup class="text-danger">&#8727</sup></label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password"
              value="{{password}}" required>
            <div id="email" class="invalid-feedback">
              &#9888 password為必填
            </div>
          </div>
          <div class="form-group">
            <label for="confirmPassword">Confirm Password <sup class="text-danger">&#8727</sup></label>
            <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
              placeholder="Confirm Password" value="{{confirmPassword}}" required>
            <div id="email" class="invalid-feedback">
              &#9888 confirmPassword為必填
            </div>
          </div>
          <button type="submit" class="btn btn-info btn-block mt-4" id="submit">Register</button>
        </form>
        <p class="lead my-4">
          Have An Account? <a href="/users/login">Login</a>
        </p>
      </div>
    </div>
  </div>
</div>

<!-- 驗證表單 -->
<script src="/javascripts/form-validity.js"></script>