<div class="bg">
  <div class="row py-5 register">
    <div class="col-8 col-sm-7 col-md-6 col-lg-4 mx-auto my-5">
      <div class="card card-body my-5">
        <h1 class="text-center my-3" style="letter-spacing:2px; font-weight:bold">Login</h1>
        {{> message}}
        <form action="/users/login" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email">
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password">
          </div>
          <button type="submit" class="btn btn-info btn-block">Login</button>
        </form>
        <p class="lead mt-4">
          No Account? <a href="/users/register" class="text-danger">Register</a>
        </p>
      </div>
    </div>
  </div>
</div>